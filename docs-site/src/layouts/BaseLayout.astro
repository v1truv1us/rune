---
import "../styles/global.css";
export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  type?: string;
}

const {
  title,
  description = "Ancient wisdom for modern workflows - Rune CLI Documentation",
  image = "/og-image.png",
  canonical,
  noindex = false,
  type = "website"
} = Astro.props;

const currentUrl = canonical || Astro.url.href;
const fullImageUrl = new URL(image, Astro.site || Astro.url.origin).href;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="developer time tracking CLI, command line productivity tools, Watson alternative, Timewarrior alternative, CLI time tracker, developer productivity, workflow automation, focus mode, project time tracking, code time tracking, git time tracking" />
    <meta name="author" content="Rune CLI Team" />
    <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />

    <!-- Canonical URL -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Rune CLI - Ancient wisdom for modern workflows" />
    <meta property="og:site_name" content="Rune CLI" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullImageUrl} />
    <meta property="twitter:image:alt" content="Rune CLI - Ancient wisdom for modern workflows" />
    <meta property="twitter:creator" content="@RuneCLI" />
    <meta property="twitter:site" content="@RuneCLI" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="msapplication-TileColor" content="#0f172a" />

    <!-- Global CSS -->
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Additional Meta -->
    <meta name="generator" content={Astro.generator} />
    <meta name="format-detection" content="telephone=no" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Rune CLI",
        "description": "Developer time tracking CLI and productivity automation tool. Modern Watson and Timewarrior alternative with intelligent project detection and focus mode.",
        "url": "https://runecli.dev",
        "applicationCategory": "DeveloperApplication",
        "operatingSystem": "macOS, Linux, Windows",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        },
        "author": {
          "@type": "Organization",
          "name": "Rune CLI Team"
        },
        "downloadUrl": "https://github.com/ferg-cod3s/rune/releases",
        "softwareVersion": "0.9.0-beta.1",
        "releaseNotes": "MVP feature-complete beta release"
      })}
    </script>
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    <nav>
      <div class="nav-container">
        <div class="nav-content">
          <div class="nav-brand">
            <a href="/">
              <div class="nav-logo">RUNE</div>
              <span class="nav-subtitle">CLI</span>
            </a>
          </div>
          <div class="nav-links">
            <a href="/docs">Docs</a>
            <a href="/getting-started">Getting Started</a>
            <a href="/examples">Examples</a>
            <a href="https://github.com/ferg-cod3s/rune">GitHub</a>
          </div>
        </div>
      </div>
    </nav>

    <main id="main">
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-container">
        <div class="footer-grid">
          <div class="footer-brand">
            <div class="footer-logo">
              <div class="footer-logo-text">RUNE</div>
              <span class="footer-logo-subtitle">CLI</span>
            </div>
            <p class="footer-description">
              Ancient wisdom for modern workflows. A developer-first CLI productivity platform.
            </p>
          </div>
          <div class="footer-section">
            <h3>Documentation</h3>
            <ul class="footer-links">
              <li><a href="/getting-started">Getting Started</a></li>
              <li><a href="/docs/commands">Commands</a></li>
              <li><a href="/docs/configuration">Configuration</a></li>
              <li><a href="/examples">Examples</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h3>Community</h3>
            <ul class="footer-links">
              <li><a href="https://github.com/ferg-cod3s/rune">GitHub</a></li>
              <li><a href="https://github.com/ferg-cod3s/rune/issues">Issues</a></li>
              <li><a href="https://github.com/ferg-cod3s/rune/discussions">Discussions</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>Â© 2024 Rune CLI. Licensed under MIT.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
