---
import "../styles/global.css";
export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  lastModified?: string;
  category?: string;
}

const {
  title,
  description = "Ancient wisdom for modern workflows - Rune CLI Documentation",
  image = "/og-docs.png",
  canonical,
  noindex = false,
  lastModified,
  category = "Documentation"
} = Astro.props;

const currentUrl = canonical || Astro.url.href;
const fullImageUrl = new URL(image, Astro.site || Astro.url.origin).href;
const keywords = [
  "CLI documentation",
  "developer tools guide",
  "productivity automation",
  "time tracking setup",
  "workflow automation",
  "focus mode configuration",
  "ritual automation",
  "project detection",
  category.toLowerCase()
].join(", ");
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Rune CLI Team" />
    <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />
    {lastModified && <meta name="article:modified_time" content={lastModified} />}

    <!-- Canonical URL -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`${title} - Rune CLI Documentation`} />
    <meta property="og:site_name" content="Rune CLI" />
    <meta property="og:locale" content="en_US" />
    <meta property="article:section" content={category} />
    <meta property="article:tag" content="CLI" />
    <meta property="article:tag" content="Documentation" />
    <meta property="article:tag" content="Developer Tools" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullImageUrl} />
    <meta property="twitter:image:alt" content={`${title} - Rune CLI Documentation`} />
    <meta property="twitter:creator" content="@RuneCLI" />
    <meta property="twitter:site" content="@RuneCLI" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="msapplication-TileColor" content="#0f172a" />

    <!-- Global CSS -->
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Additional Meta -->
    <meta name="generator" content={Astro.generator} />
    <meta name="format-detection" content="telephone=no" />

    <!-- Structured Data for Documentation -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "TechArticle",
        "headline": title,
        "description": description,
        "url": currentUrl,
        "image": fullImageUrl,
        "datePublished": "2024-07-16T00:00:00Z",
        "dateModified": lastModified || "2024-07-23T00:00:00Z",
        "author": {
          "@type": "Organization",
          "name": "Rune CLI Team",
          "url": "https://github.com/ferg-cod3s"
        },
        "publisher": {
          "@type": "Organization",
          "name": "Rune CLI",
          "url": "https://rune.dev",
          "logo": {
            "@type": "ImageObject",
            "url": "https://rune.dev/logo.png"
          }
        },
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": currentUrl
        },
        "about": {
          "@type": "SoftwareApplication",
          "name": "Rune CLI",
          "applicationCategory": "DeveloperApplication"
        },
        "keywords": keywords
      })}
    </script>
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    <nav>
      <div class="nav-container">
        <div class="nav-content">
          <div class="nav-brand">
            <a href="/">
              <div class="nav-logo">RUNE</div>
              <span class="nav-subtitle">CLI</span>
            </a>
          </div>
          <div class="nav-links">
            <a href="/docs">Docs</a>
            <a href="/getting-started">Getting Started</a>
            <a href="/examples">Examples</a>
            <a href="https://github.com/ferg-cod3s/rune">GitHub</a>
          </div>
        </div>
      </div>
    </nav>

    <main id="main">
      <!-- Documentation Hero Section -->
      <div class="docs-hero">
        <div class="docs-hero-container">
          <div class="docs-hero-content">
            <h1 class="docs-title">
              {title}
            </h1>
            {description && (
              <p class="docs-description">
                {description}
              </p>
            )}
            <div class="docs-category-badge">
              <span class="docs-category-label">ðŸ“– {category}</span>
              {lastModified && (
                <span class="docs-updated">Updated {new Date(lastModified).toLocaleDateString()}</span>
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Markdown Content Container -->
      <div class="docs-content">
        <div class="markdown-content-enhanced">
          <slot />
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="footer-container">
        <div class="footer-grid">
          <div class="footer-brand">
            <div class="footer-logo">
              <div class="footer-logo-text">RUNE</div>
              <span class="footer-logo-subtitle">CLI</span>
            </div>
            <p class="footer-description">
              Ancient wisdom for modern workflows. A developer-first CLI productivity platform.
            </p>
          </div>
          <div class="footer-section">
            <h3>Documentation</h3>
            <ul class="footer-links">
              <li><a href="/getting-started">Getting Started</a></li>
              <li><a href="/docs/commands">Commands</a></li>
              <li><a href="/docs/configuration">Configuration</a></li>
              <li><a href="/examples">Examples</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h3>Community</h3>
            <ul class="footer-links">
              <li><a href="https://github.com/ferg-cod3s/rune">GitHub</a></li>
              <li><a href="https://github.com/ferg-cod3s/rune/issues">Issues</a></li>
              <li><a href="https://github.com/ferg-cod3s/rune/discussions">Discussions</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>Â© 2024 Rune CLI. Licensed under MIT.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
