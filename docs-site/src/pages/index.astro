import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Rune CLI - Developer Time Tracking & Productivity Automation Tool | Watson Alternative"
  description="Open-source CLI time tracking tool for developers. Intelligent project detection, focus mode, and workflow automation. The modern Watson and Timewarrior alternative built for developer productivity."
  type="website"
>
  <div class="hero">
    <!-- Hero Section -->
    <div class="hero-content">
      <div class="text-center">
        <pre class="hero-ascii">
 ______     __  __     __   __     ______   
/\  == \   /\ \/\ \   /\ "-.\ \   /\  ___\  
\ \  __&lt;   \ \ \_\ \  \ \ \-.  \  \ \  __\  
 \ \_\ \_\  \ \_____\  \ \_\\"\_\  \ \_____\
  \/_/ /_/   \/_____/   \/_/ \/_/   \/_____/ 
        </pre>
        
        <!-- Beta Banner -->
        <div class="beta-banner">
          <span class="beta-label">üöÄ Beta Now Available!</span>
          <span class="beta-version">v0.9.0-beta.1 - MVP Feature Complete</span>
        </div>

        <h1 class="hero-title">
          <span class="hero-highlight">Developer Time Tracking CLI</span><br />
          That Actually Works
        </h1>
        
        <p class="hero-description">
          The modern Watson and Timewarrior alternative. Command line productivity tool with intelligent project detection, automatic focus mode, and workflow automation. Built by developers, for developers.
        </p>
        
        <div class="hero-buttons">
          <a href="/getting-started" class="btn btn-primary">
            Try Beta Now
          </a>
          <a href="https://github.com/ferg-cod3s/rune" class="btn btn-secondary">
            View on GitHub
          </a>
          <a href="/docs" class="btn btn-secondary">
            Documentation
          </a>
        </div>
        
        <!-- Demo Section -->
        <section class="demo-section">
          <figure class="demo-figure">
            <img src="/rune-demo.gif" 
                 alt="Rune CLI Demo - Project detection, time tracking, and workflow automation" 
                 class="demo-image"
                 loading="lazy" />
            <figcaption class="demo-caption">
              ‚ú® Full workflow demo: project detection ‚Üí time tracking ‚Üí pause/resume ‚Üí reporting
            </figcaption>
          </figure>
        </section>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="features">
    <div class="features-header">
      <h2 class="features-title">Why Choose Rune Over Watson & Timewarrior?</h2>
      <p class="features-subtitle">
        Modern CLI time tracking with developer-focused features that Watson and Timewarrior users have been waiting for. Intelligent automation, cross-platform focus mode, and zero configuration project detection.
      </p>
    </div>
    
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon">‚è±Ô∏è</div>
        <h3 class="feature-title">Intelligent Time Tracking CLI</h3>
        <p class="feature-description">
          Smart project detection via <code>Git</code>, <code>package.json</code>, <code>go.mod</code>. Unlike Watson, maintains session state across system restarts with zero configuration.
        </p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">üîï</div>
        <h3 class="feature-title">Cross-Platform Focus Mode</h3>
        <p class="feature-description">
          Automatic Do Not Disturb on macOS, Windows, and Linux. 6+ desktop environments supported.
        </p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">ü§ñ</div>
        <h3 class="feature-title">Ritual Automation</h3>
        <p class="feature-description">
          Custom commands that run when you start/stop work. <code>YAML</code> configuration with error handling.
        </p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">üîÑ</div>
        <h3 class="feature-title">Watson & Timewarrior Migration</h3>
        <p class="feature-description">
          Seamless migration from <code>Watson</code> and <code>Timewarrior</code> with intelligent project mapping and data validation. Keep your existing time tracking history.
        </p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">üìä</div>
        <h3 class="feature-title">Beautiful Reporting</h3>
        <p class="feature-description">
          Colored <code>CLI</code> output with themes. Daily/weekly summaries and project breakdowns.
        </p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">üõ°Ô∏è</div>
        <h3 class="feature-title">Privacy-First</h3>
        <p class="feature-description">
          All data stored locally. No cloud dependencies. Optional telemetry with full transparency.
        </p>
      </div>
    </div>
  </div>

  <!-- Quick Start Section -->
  <div class="quick-start">
    <div class="quick-start-container">
      <div class="quick-start-header">
        <h2 class="quick-start-title">Quick Start</h2>
        <p class="quick-start-subtitle">Get up and running in minutes</p>
      </div>
      
      <div class="code-block">
        <div class="code-comment"># Install via curl (macOS/Linux)</div>
        <div class="code-command">$ curl -fsSL https://raw.githubusercontent.com/ferg-cod3s/rune/main/install.sh | bash</div>
        <br/>
        <div class="code-comment"># Or via Homebrew</div>
        <div class="code-command">$ brew install --cask ferg-cod3s/tap/rune</div>
        <br/>
        <div class="code-comment"># Interactive setup</div>
        <div class="code-command">$ rune init --guided</div>
        <br/>
        <div class="code-comment"># Start tracking (auto-detects project, enables <code>DND</code>)</div>
        <div class="code-command">$ rune start</div>
        <br/>
        <div class="code-comment"># View your daily report</div>
        <div class="code-command">$ rune report today</div>
      </div>
      
      <div class="quick-start-link">
        <a href="/getting-started">
          View detailed installation guide ‚Üí
        </a>
      </div>
    </div>
  </div>
</BaseLayout>