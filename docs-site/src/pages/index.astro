<BaseLayout title="Rune CLI - Ancient wisdom for modern workflows">
  <div class="bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900">
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32">
      <div class="text-center">
        <pre class="text-blue-400 text-sm md:text-base font-mono mb-8 inline-block">
